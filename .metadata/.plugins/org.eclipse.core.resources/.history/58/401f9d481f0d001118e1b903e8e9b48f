spring.application.name=api-gateway
server.port=8001

# Eureka
eureka.client.service-url.defaultZone=http://localhost:8761/eureka

# Timeouts
spring.cloud.gateway.server.webflux.httpclient.connect-timeout=3000
spring.cloud.gateway.server.webflux.httpclient.response-timeout=5s

# ✅ RUTAS EXPLÍCITAS (sin .server.webflux)
spring.cloud.gateway.routes[0].id=usuario-service
spring.cloud.gateway.routes[0].uri=lb://usuario-service
spring.cloud.gateway.routes[0].predicates[0]=Path=/api/v1/usuario-service-ws/**

spring.cloud.gateway.routes[1].id=libros-service
spring.cloud.gateway.routes[1].uri=lb://libros-service
spring.cloud.gateway.routes[1].predicates[0]=Path=/api/v1/libros-service-ws/**

spring.cloud.gateway.routes[2].id=trabajadores-service
spring.cloud.gateway.routes[2].uri=lb://trabajadores-service
spring.cloud.gateway.routes[2].predicates[0]=Path=/api/v1/trabajadores-service-ws/**

spring.cloud.gateway.routes[3].id=prestamos-service
spring.cloud.gateway.routes[3].uri=lb://prestamos-service
spring.cloud.gateway.routes[3].predicates[0]=Path=/api/v1/prestamo-service-ws/**

# Filtros globales
spring.cloud.gateway.default-filters[0]=RemoveRequestHeader=Cookie
spring.cloud.gateway.default-filters[1]=RemoveRequestHeader=Set-Cookie